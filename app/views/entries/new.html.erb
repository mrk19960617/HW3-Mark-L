<h1>Add an Entry for <%= @place.name %></h1>

<%= form_with model: @entry, url: "/places/#{@place.id}/entries", method: "post" do |f| %>
  <p>
    <label>Title:</label><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <label>Description:</label><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <label>Date:</label><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.submit "Add Entry" %>
  </p>
<% end %>

<p><%= link_to "Back to Place", "/places/#{@place.id}" %></p>
